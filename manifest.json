{
  "manifest_version": 2,
  "name": "Kallo",
  "version": "1.0.0",
  "default_locale": "en-US",
  "description": "Kallo Chrome extension",
  "author": "Dip Roy",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],
  "background": {
    "scripts": ["socket.io.js", "background.js"]
  },
  "permissions": ["storage", "webRequestBlocking", "webRequest", "webNavigation", "activeTab", "tabs", "*://*/*"]
}
